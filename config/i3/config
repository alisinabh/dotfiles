# Auto-lock after some time
#exec --no-startup-id xautolock -locker '~/.dotfiles/config/i3/scripts/lock.sh' -time 5&
exec --no-startup-id xidlehook --not-when-fullscreen --timer normal 600 '~/.dotfiles/config/i3/scripts/lock.sh' ''&

set $Locker ~/.dotfiles/config/i3/scripts/lock.sh && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+p mode "$mode_system"

# Auto-lock after suspend. xss-lock
exec_always --no-startup-id xss-lock -- "$HOME/.dotfiles/config/i3/scripts/lock.sh"&

exec_always --no-startup-id "sleep 3; setxkbmap -layout us,ir"
exec_always --no-startup-id "sleep 3; setxkbmap -option grp:alt_shift_toggle"

