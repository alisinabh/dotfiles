[
  {
    "bindings": {
      "ctrl-a j": "terminal_panel::ToggleFocus",
      "ctrl-a k": "terminal_panel::ToggleFocus",
      "ctrl-a z": "workspace::ToggleZoom",
      "cmd-b": "workspace::ToggleBottomDock",
      "ctrl-a l": "pane::ActivateNextItem",
      "ctrl-a h": "pane::ActivatePrevItem",
      "ctrl-a t": "workspace::NewTerminal",
      "ctrl-[": "pane::GoBack",
      "ctrl-]": "pane::GoForward"
    }
  },
  {
    "context": "Editor || ProjectPanel",
    "bindings": {
      "ctrl-l": "workspace::ActivateNextPane",
      "ctrl-h": "workspace::ActivatePreviousPane"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "space e": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      "|": "pane::SplitRight",
      "space f f": "file_finder::Toggle",
      "space f w": "workspace::NewSearch",
      "space f t": "language_selector::Toggle",
      "space e": "project_panel::ToggleFocus",
      "space q": "pane::CloseActiveItem",
      "space c": "buffer_search::Dismiss",
      "space p o": "projects::OpenRecent",
      "space f y": "editor::CopyRelativePath",
      "space /": "editor::ToggleComments",
      "space g b": "editor::ToggleGitBlame",
      "space tab": "pane::GoBack",
      "space shift-tab": "pane::GoForward"
    }
  }
]
